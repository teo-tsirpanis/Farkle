{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Farklei",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "Farklei.dll",
            "args": [
                "--egtfile",
                "inception.egt",
                "--inputfile",
                "inception.grm"
            ],
            "cwd": "${workspaceRoot}/sample/farklei/bin/Debug/netcoreapp2.1/",
            "stopAtEntry": false,
            "console": "internalConsole"
        },
        {
            "name": "Farkle.Calculator",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "Farkle.Calculator.dll",
            "args": [
                "5"
            ],
            "cwd": "${workspaceRoot}/sample/Farkle.Calculator/bin/Debug/netcoreapp2.1/",
            "stopAtEntry": false,
            "console": "internalConsole"
        },
        {
            "name": ".NET Core Launch (console)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceRoot}/tests/Farkle.Tests/bin/Debug/netcoreapp2.0/Farkle.Tests.dll",
            "args": [],
            "cwd": "${workspaceRoot}/tests/Farkle.Tests/bin/Debug/netcoreapp2.0/",
            "stopAtEntry": false,
            "console": "internalConsole"
        },
        {
            "name": ".NET Core Launch (console, no build)",
            "type": "coreclr",
            "request": "launch",
            "program": "${workspaceRoot}/tests/Farkle.Tests/bin/Debug/netcoreapp2.0/Farkle.Tests.dll",
            "args": [],
            "cwd": "${workspaceRoot}/tests/Farkle.Tests/bin/Debug/netcoreapp2.0/",
            "stopAtEntry": false,
            "console": "internalConsole"
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}"
        }
    ]
}