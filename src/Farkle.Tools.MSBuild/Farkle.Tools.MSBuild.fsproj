<Project Sdk="Microsoft.NET.Sdk">
  <Import Project="../NuGet.props" />
  <PropertyGroup>
    <TargetFrameworks>net472;netcoreapp3.1</TargetFrameworks>
    <Description>Farkle's integration with MSBuild. This package supports facilities like the precompiler and the template creator.</Description>
    <IncludeBuildOutput>false</IncludeBuildOutput>
    <PackageTags>$(PackageTags);msbuild;sigourney</PackageTags>
    <SigourneyPublish>true</SigourneyPublish>
  </PropertyGroup>
  <ItemGroup>
    <Compile Include="FarkleCreateTemplateTask.fs" />
    <Compile Include="FarklePrecompileTask.fs" />
    <None Include="Farkle.Tools.MSBuild.props" Pack="true" PackagePath="build" />
    <None Include="Farkle.Tools.MSBuild.targets" Pack="true" PackagePath="build" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Sigourney" Version="0.2.1" PrivateAssets="compile" />
    <PackageReference Include="Microsoft.Build.Framework" Version="16.7.0" ExcludeAssets="runtime" PrivateAssets="all" />
    <PackageReference Include="Microsoft.Build.Utilities.Core" Version="16.7.0" ExcludeAssets="runtime" PrivateAssets="all" />
    <ProjectReference Include="..\Farkle\Farkle.fsproj" />
    <ProjectReference Include="..\Farkle.Tools.Shared\Farkle.Tools.Shared.fsproj" />
  </ItemGroup>
</Project>
