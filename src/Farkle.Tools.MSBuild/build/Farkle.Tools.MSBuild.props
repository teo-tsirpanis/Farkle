<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <PropertyGroup>
    <SigourneyRegisteredTargetFiles>$(SigourneyRegisteredTargetFiles);$(MSBuildThisFileDirectory)Farkle.Tools.MSBuild.Precompiler.targets</SigourneyRegisteredTargetFiles>
    <SigourneyRegisteredTargets>$(SigourneyRegisteredTargets);FarklePrecompileGrammars</SigourneyRegisteredTargets>
  </PropertyGroup>

  <PropertyGroup Condition="$(MSBuildRuntimeType) == Core">
    <FarkleTaskAssembly>$(MSBuildThisFileDirectory)../tools/netcoreapp3.1/Farkle.Tools.MSBuild.dll</FarkleTaskAssembly>
  </PropertyGroup>
  <PropertyGroup Condition="$(MSBuildRuntimeType) != Core">
    <FarkleTaskAssembly>$(MSBuildThisFileDirectory)../tools/net472/Farkle.Tools.MSBuild.dll</FarkleTaskAssembly>
  </PropertyGroup>
</Project>
