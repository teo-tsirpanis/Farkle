namespace ``{{ grammar_name }}``.Definitions

/// A terminal of the {{ grammar_name }} language.
type Terminal =
{{~ for s in grammar.symbols.terminals ~}}
    /// {{ s }}
    | {{ s.name | fmt pascal_case "" }} = {{ s.index }}u
{{~ end ~}}

/// A production of the {{ grammar_name }} language.
type Production =
{{~ for p in grammar.productions ~}}
    /// {{ p }}
    | {{ p | fmt_production pascal_case "" }} = {{ p.index }}u
{{~ end ~}}

type Grammar = class end
with
    static member AsBase64 = """
{{ to_base_64 true}}"""